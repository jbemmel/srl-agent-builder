# See example_config.yml for an explanation of all the accepted fields
{{ agent_name }}:
   path: /opt/srlinux/agents/
   launch-command: {{ agent_name | replace('-','_') }}.sh
   search-command: python3 /opt/srlinux/agents/{{ agent_name | replace('-','_') }}.py
   wait-for-config: Yes
   failure-threshold: 100
   failure-action: wait=forever
   author: 'AgentBuilder-to-be-updated'
   version-command: ' cat build_version'
   yang-modules:
       names:
           - "{{ agent_name }}"
       source-directories:
           - "/opt/srlinux/agents/"
           - "/opt/srlinux/models/srl_nokia/models/common/"
